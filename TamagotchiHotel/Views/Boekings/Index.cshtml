@using TamagotchiHotel.ViewModels
@model BoekingViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Levende Tamagotchis</h2>
<table class="table">
    <tr>
        <th>
            Naam
        </th>
        <th>
            KamerID
        </th>
        <th>
            Kamer Type
        </th>
    </tr>

    @foreach (var item in Model.Tamagotchi)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelKamer.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelKamer.KamerType)
            </td>
        </tr>
    }
</table>


<h2>Vrije Kamers</h2>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Hoeveelheid bedden
        </th>
        <th>
            Kamer type
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Kamer)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoeveelheidBedden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KamerType)
            </td>
        </tr>
    }

</table>